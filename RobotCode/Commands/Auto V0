package frc.robot.commands;

import edu.wpi.first.wpilibj2.command.CommandBase;
import frc.robot.RobotContainer;
import edu.wpi.first.wpilibj.Encoder;
public class Auto_V0 extends CommandBase {
  /** Creates a new Auto_V0. */
  public Auto_V0() {
    // Use addRequirements() here to declare subsystem dependencies.
    addRequirements(RobotContainer.driveTrain);
  }

  // Called when the command is initially scheduled.
  @Override
  public void initialize() {
    //Set Motor Powers to 0 upon Initialization
    RobotContainer.driveTrain.motorLeftFront.set(0);
    RobotContainer.driveTrain.motorLeftBack.set(0);
    RobotContainer.driveTrain.motorRightFront.set(0);
    RobotContainer.driveTrain.motorRightBack.set(0);

    //Set Encoders to 0 upon Initialization
    RobotContainer.driveTrain.motorLeftFrontEncoder.reset();
    RobotContainer.driveTrain.motorLeftBackEncoder.reset();
    RobotContainer.driveTrain.motorRightFrontEncoder.reset();
    RobotContainer.driveTrain.motorRightBackEncoder.reset();

  }

  // Called every time the scheduler runs while the command is scheduled.
  @Override
  public void execute() {

  }

  // Called once the command ends or is interrupted.
  @Override
  public void end(boolean interrupted) {}

  // Returns true when the command should end.
  @Override
  public boolean isFinished() {
    return false;
  }
}
