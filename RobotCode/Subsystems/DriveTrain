package frc.robot.subsystems;

import edu.wpi.first.wpilibj2.command.SubsystemBase;
import frc.robot.Constants;
import edu.wpi.first.wpilibj.drive.MecanumDrive;
import edu.wpi.first.wpilibj.motorcontrol.PWMSparkMax;
import com.kauailabs.navx.frc.AHRS;

public class DriveTrain extends SubsystemBase {

  public PWMSparkMax motorLeftFront;
  public PWMSparkMax motorLeftBack;
  public PWMSparkMax motorRightFront;
  public PWMSparkMax motorRightBack;

  //Nav X instantiation
  public AHRS navX;

  public MecanumDrive mecanumDrive;

  public DriveTrain(){
  //Shows the ID of the motors
  motorLeftFront = new PWMSparkMax(Constants.motorLeftFront_ID);
  motorLeftBack = new PWMSparkMax(Constants.motorLeftBack_ID);
  motorRightFront = new PWMSparkMax(Constants.motorRightFront_ID);
  motorRightBack = new PWMSparkMax(Constants.motorRightBack_ID);
  navX = new AHRS(Constants.navX_ID);

  //Shows the ID of the encoders


  //Inverts Motors and Encoders For Mecanum
  motorLeftFront.setInverted(true);
  motorLeftBack.setInverted(true);
  
  mecanumDrive = new MecanumDrive(motorLeftFront,motorLeftBack,motorRightFront,motorRightBack);
  }
  public void mecanumDrive(double ySpeed, double xSpeed, double zRotation){

    mecanumDrive.driveCartesian(ySpeed, xSpeed, zRotation);
  }
  
  @Override
  public void periodic() {
    // This method will be called once per scheduler run
  }

  public void driftControl(double leftY, double rightY){
    
  }
}
