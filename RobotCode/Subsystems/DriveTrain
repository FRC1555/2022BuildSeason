package frc.robot.subsystems;

import edu.wpi.first.wpilibj2.command.SubsystemBase;
import frc.robot.Constants;
import edu.wpi.first.wpilibj.drive.MecanumDrive;
import edu.wpi.first.wpilibj.motorcontrol.PWMVictorSPX;


public class DriveTrain extends SubsystemBase {

  PWMVictorSPX motorLeftFront;
  PWMVictorSPX motorLeftBack;
  PWMVictorSPX motorRightFront;
  PWMVictorSPX motorRightBack;
  MecanumDrive mecanumDrive;

  public DriveTrain(){
  motorLeftFront = new PWMVictorSPX(Constants.MOTOR_LEFT_FRONT_ID);
  motorLeftBack = new PWMVictorSPX(Constants.MOTOR_LEFT_BACK_ID);
  motorRightFront = new PWMVictorSPX(Constants.MOTOR_RIGHT_FRONT_ID);
  motorRightBack = new PWMVictorSPX(Constants.MOTOR_RIGHT_BACK_ID);
  //Inverts Motors For Mecanum
  motorLeftFront.setInverted(true);
  motorLeftBack.setInverted(true);

  mecanumDrive = new MecanumDrive(motorLeftFront,motorLeftBack,motorRightFront,motorRightBack);
  }
  public void mecanumDrive(double ySpeed, double xSpeed, double zRotation){
    mecanumDrive.driveCartesian(ySpeed, xSpeed, zRotation);

  }
  
  @Override
  public void periodic() {
    // This method will be called once per scheduler run
  }
}

